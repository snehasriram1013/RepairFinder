<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css"
  />
  <link rel="stylesheet" href="/styles.css" />
  <meta name="author" content="Lily Millard" />
  <title>Register</title>
</head>
<body>
  <%- include("partials/head.ejs") %>
  <main>
    <%- include("partials/sidebar.ejs") %>

    <h1>Register</h1>
    <form action="/register" method="POST">
      <p>
        <label>Name:<br/>
          <input name="name" placeholder="Your full name" required/>
        </label>
      </p>
      <p>
        <label>Email:<br/>
          <input name="email" type="email" placeholder="you@example.com" required/>
        </label>
      </p>
      <p>
        <label>Password:<br/>
          <input name="password" type="password" placeholder="Choose a password" required/>
        </label>
      </p>
      <p>
        <label>Role:<br/>
          <select name="role" required>
            <option value="">— Select role —</option>
            <option value="student">Student</option>
            <option value="admin">Facilities/Admin</option>
          </select>
        </label>
      </p>
      <button type="submit">Sign Up</button>
      <p style="color:red;"><%= error %></p>
    </form>
  </main>
  <%- include("partials/foot.ejs") %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
  <script src="https://cs.wellesley.edu/~anderson/js/bounds/bounds-plugin.js"></script>
  <script src="/main.js"></script>
  <script src="https://kit.fontawesome.com/1d15fd4b72.js" crossorigin="anonymous"></script>
</body>
</html>
