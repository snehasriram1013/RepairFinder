<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css">
    <link rel="stylesheet" href="/styles.css">
    <meta name=author content="Lily Millard">
    <title>Home</title>
</head>
<body>

    <%- include("partials/head.ejs") %>

<main>
    <%- include("partials/sidebar.ejs") %>
    <%- include("partials/search.ejs") %>
    <h1>Dashboard</h1>
    <%- include("partials/error.ejs") %>
        <% if (allTickets.length > 0) { %>
            <% allTickets.forEach(function(ticket) { %>
                <section class="ticket <%=ticket.urgency%>" >
                    <h3><a href="/ticket/<%=ticket.id%>">Ticket</a></h3> 
                    <p><%= ticket.building %></p>

                     <% if (ticket.path) { %>
                            <img class="ticketImg" src="<%=ticket.path%>" alt="Uploaded file for <%= ticket.title %>">
                    <% } %>
                    
                    <form method="POST" action='/delete-ticket'>
                        <input type="checkbox" id="dataResolved" name="dataResolved" value="resolved?">
                        <label for="dataResolved">resolved?</label>
                        <input type="hidden" name="ticketId" value="<%= ticket.id %>">
                        <button type="submit">Submit</button>
                    </form>
                </section>
            <% })} %>

</main>

<%- include("partials/foot.ejs") %>

<!-- JavaScript at the bottom -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<script src="https://cs.wellesley.edu/~anderson/js/bounds/bounds-plugin.js"></script>
<script src="/main.js"></script>
<script src="https://kit.fontawesome.com/1d15fd4b72.js" crossorigin="anonymous"></script>
</body>
</html>